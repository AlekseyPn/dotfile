{   
    "parser": "babel-eslint",  
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "globals": {
        "$": true,
        "_": true
    },
    "extends": ["airbnb-base", "plugin:backbone/recommended"],    
    "plugins": [
        "import",
        "backbone"
    ],  
    "settings": {
        "import/resolver": "webpack.config.js"
    },  
    "rules": {
        "import/no-unresolved": "off",
        "import/extensions": [
            0,
            "always",
            {   
                "packages": "newer" 
            }
        ]
    }
}


